<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.movie_collection.dal.mappers.CategoryMapperDAO">

    <resultMap id="categoryResult" type="Category">
        <id property="id" column="idCat"/>
        <result property="name" column="nameCat"/>
    </resultMap>

    <select id="getAllCategories"
            resultType="Category"
            resultMap="categoryResult">

        SELECT C.id   as idCat,
               C.name as nameCat -->
        FROM Category C;

    </select>

    <select id="getCategoryByName"
            resultType="Category"
            resultMap="categoryResult">

        SELECT C.id   as idCat,
               C.name as nameCat-->
        FROM Category C
        WHERE C.name = #{categoryName}

    </select>


    <insert
            id="createCategory"
            parameterType="Category"
            flushCache="true"
            statementType="PREPARED"
            keyProperty="id"
            keyColumn="id"
            useGeneratedKeys="true"
            timeout="20">

        -- insert new category into table with params still need to make them safer
        INSERT INTO Category (name) VALUES (#{name})
        -- selects the generated key
        <selectKey keyProperty="id" resultType="int" order="AFTER">
            SELECT @@IDENTITY
        </selectKey>

    </insert>

    <delete id="deleteCategory"
            parameterType="Category"
            flushCache="true"
            statementType="PREPARED"
            timeout="20">
        -- executes delete query
        DELETE
        FROM Category
        WHERE id = #{categoryId}
    </delete>

</mapper>


